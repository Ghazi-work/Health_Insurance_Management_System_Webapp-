@using Health_Insuarance_Management_System_webapp.Enums;
@model Health_Insuarance_Management_System_webapp.ViewModels.AccountRegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register User</h1>

<form method="post" asp-action="Register" enctype="multipart/form-data">
    <div class="border p-3 mt-4 row">
         <div class="row pb-2">
            <h2 class="text-primary">Register User</h2>
            <hr />
        </div>
        <div class="mb-3 ">
            <label asp-for="Photo"></label>
            <input id="inpBox" type="file" name="file" class="form-control" />
        </div>
       
        <div class="mb-3 col-6">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
          <div class="mb-3 col-6">
            <label asp-for="LastName"></label>
