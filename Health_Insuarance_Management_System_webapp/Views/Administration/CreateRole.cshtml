@model Health_Insuarance_Management_System_webapp.ViewModels.CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_Layout3.cshtml";

}



<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Role" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RoleList" asp-controller="Administration">Back to List</a>
</div>
