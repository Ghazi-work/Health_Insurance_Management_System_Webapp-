                    </ul>
                  
                </div>
                <ul class="navbar-nav ml-auto">
                    @{
                        
                        if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                   Account
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="nav-link text-dark btn btn-link" asp-area="" asp-controller="Account" asp-route-name="@User.Identity.Name" asp-action="ChangeDetails" style="width:auto">Change Details</a>

                                    <a class="nav-link text-dark btn btn-link" asp-area="" asp-controller="Account" asp-action="ChangePasswordUser" style="width:auto">Change Password</a>
                                    <a class="nav-link text-dark btn btn-link" asp-area="" asp-controller="Account" asp-action="LogOut" style="width:auto">Logout @User.Identity.Name </a>



                                </div>
                            </li>
                          
                         
                           
                        }
                        else
                        {
                             <li class="nav-item">
                                <a class="nav-link text-dark btn btn-outline-success" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                             </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark btn btn-outline-info" asp-area="" asp-controller="Account" asp-action="LogIn">Log in</a>
                            </li>
                        }
                    }
                   
                </ul>
            </div>
        </nav>
    </header>


