@model List<Health_Insuarance_Management_System_webapp.Models.ClaimPolicyModel>
@{
    ViewData["Title"] = "Claims By Employees";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}





<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Employee Name</th>
            <th>Policy Name</th>
            <th>Insurance Company Name</th>
            <th>Bill Image </th>
            <th>Claim Date</th>
            <th>Claimed Amount</th>
            <th>Status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>

                    <td>@item.UserId</td>
                    <td>@item.FnameLname</td>
                    <td> <select asp-for="@item.PolicyId" disabled  asp-items="ViewBag.PolicyId"></select></td>
                    <td hidden> <select asp-for="@item.PolicyId"  asp-items="ViewBag.PolicyId"></select></td>
                    <td> <select asp-for="@item.CompId" disabled asp-items="ViewBag.CompanyId"></select></td>
                    <td hidden> <select asp-for="@item.CompId"  asp-items="ViewBag.CompanyId"></select></td>
                    <td><img src="~/@item.Photopath" width="120" /></td>
                    <td>@item.PostingDate</td>
                    <td>@item.ClaimAmount</td>
                    <td>@item.Status</td>
                    <td><a class="btn btn-success" asp-route-id="@item.ClaimId" asp-action="EditClaimRequest" asp-controller="ClaimRequest">Edit</a></td>
                    <td><a class="btn btn-danger">Delete</a></td>
                   


                    
                </tr>
            }
        }
      
        
    </tbody>
</table>