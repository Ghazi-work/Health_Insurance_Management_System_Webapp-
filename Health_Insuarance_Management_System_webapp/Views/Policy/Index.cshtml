@model IEnumerable<Health_Insuarance_Management_System_webapp.Models.PolicyModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolicyTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolicyDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolicyDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolicyPaymentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.InsuranceCompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyPaymentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PolicyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PolicyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PolicyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
