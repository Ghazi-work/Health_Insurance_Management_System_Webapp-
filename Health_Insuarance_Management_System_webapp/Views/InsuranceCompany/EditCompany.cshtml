@using Health_Insuarance_Management_System_webapp.ViewModels;
@model Health_Insuarance_Management_System_webapp.ViewModels.InsuranceCompanyViewModel
@{
    ViewData["Title"] = "EditCompany";
    //var photoPath = "~/" + (Model.PhotoPath ?? "noimg.jpg");

}

<h1>EditCompany</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCompany" enctype="multipart/form-data">
            <img src="~/@Model.existingPath" alt="img" class="w-50" asp-append-version="true" />

            <input hidden asp-for="Id" />
            <input hidden asp-for="existingPath" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label class="control-label">Click here to change photo</label>
                <input asp-for="Photo" class="form-control" />
               
            </div>
          
              
            

            <div class="form-group">
                <label asp-for="InsuranceCompanyName" class="control-label"></label>
                <input asp-for="InsuranceCompanyName" class="form-control" />
                <span asp-validation-for="InsuranceCompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeadOfficeAddress" class="control-label"></label>
                <input asp-for="HeadOfficeAddress" class="form-control" />
                <span asp-validation-for="HeadOfficeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HelplineNumber" class="control-label"></label>
                <input asp-for="HelplineNumber" class="form-control" />
                <span asp-validation-for="HelplineNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraInformation" class="control-label"></label>
                <input asp-for="ExtraInformation" class="form-control" />
                <span asp-validation-for="ExtraInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficialEmail" class="control-label"></label>
                <input asp-for="OfficialEmail" class="form-control" />
                <span asp-validation-for="OfficialEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WebsiteUrl" class="control-label"></label>
                <input asp-for="WebsiteUrl" class="form-control" />
                <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListCompany">Back to List</a>
</div>